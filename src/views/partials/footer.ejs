  <script>
    $(document).ready(function() {
        function checkStatus() {
            $.ajax({
                url: '/new/status', 
                type: 'GET',
                success: function(data) {
                    if(data.status === 'ok') {
                        $('#statusPing div').removeClass('bg-red-500').addClass('bg-green-500');
                    } else {
                        $('#statusPing div').removeClass('bg-green-500').addClass('bg-red-500');
                    }
                },
                error: function() {
                    $('#statusPing div').removeClass('bg-green-500').addClass('bg-red-500');
                }
            });
        }
        checkStatus();
        setInterval(checkStatus, 300000); // 300,000 milliseconds = 5 minutes
    });
    </script>
    